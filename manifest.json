{
    "name": "Auto Connect for LinkedIn",
    "version": "1.0",
    "description": "Automatically connects with people on LinkedIn",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/search/results/people/*"
            ],
            "js": [
                "countButtons.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Auto Connect for LinkedIn",
        "default_icon": "logo.png"
    },
    "icons": {
        "128": "logo.png"
    },
    "manifest_version": 2
}